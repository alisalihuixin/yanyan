/* care//comment/comment.wxss */
.header{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
}
.header input{
  margin-left: 20rpx;
  width: 60%;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
}
.header button{
  float: right;
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
  background-color: rgb(5, 120, 228);
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  margin-right: 5%;
}
.content{
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  background-color: #fff;
}
.nickname{
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  margin-right: 10rpx;
  font-weight: 800;
}
.comment{
  font-size: 26rpx;
}